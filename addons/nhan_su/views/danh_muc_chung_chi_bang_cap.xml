<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_dm_ccbc_tree" model="ir.ui.view">
            <field name="name">danh_muc_chung_chi_bang_cap.tree</field>
            <field name="model">danh_muc_chung_chi_bang_cap</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ma_chung_chi"/>
                    <field name="ten_chung_chi"/>
                    <field name="cap_do"/>
                </tree>
            </field>
        </record>

        <record id="view_dm_ccbc_form" model="ir.ui.view">
            <field name="name">danh_muc_chung_chi_bang_cap.form</field>
            <field name="model">danh_muc_chung_chi_bang_cap</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="ma_chung_chi"/>
                            <field name="ten_chung_chi"/>
                            <field name="cap_do"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_danh_muc_chung_chi_bang_cap" model="ir.actions.act_window">
            <field name="name">Danh mục chứng chỉ - bằng cấp</field>
            <field name="res_model">danh_muc_chung_chi_bang_cap</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>