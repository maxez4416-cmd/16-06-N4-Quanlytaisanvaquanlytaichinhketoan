<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_bao_cao_tai_chinh_form" model="ir.ui.view">
            <field name="name">qltc.bao.cao.tai.chinh.form</field>
            <field name="model">qltc.bao.cao.tai.chinh</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Báo cáo tài chính">
                            <group>
                                <field name="tu_ngay"/>
                                <field name="den_ngay"/>
                            </group>
                            <group>
                                <field name="loai_bao_cao"/>
                            </group>
                        </group>
                        <group>
                            <button name="action_tao_bao_cao" string="Tạo báo cáo" 
                                    type="object" class="oe_highlight"/>
                        </group>
                        <group col="4" string="Tổng hợp" attrs="{'invisible': [('chi_tiet_ids', '=', [])]}">
                            <field name="tong_thu"/>
                            <field name="tong_chi"/>
                            <field name="chenh_lech"/>
                        </group>
                        <notebook attrs="{'invisible': [('chi_tiet_ids', '=', [])]}">
                            <page string="Chi tiết">
                                <field name="chi_tiet_ids" nolabel="1">
                                    <tree>
                                        <field name="ma_but_toan"/>
                                        <field name="ngay_ghi_nhan"/>
                                        <field name="dien_giai"/>
                                        <field name="loai_but_toan"/>
                                        <field name="so_tien_thu"/>
                                        <field name="so_tien_chi"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_bao_cao_tai_chinh" model="ir.actions.act_window">
            <field name="name">Báo cáo tài chính</field>
            <field name="res_model">qltc.bao.cao.tai.chinh</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>